{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "experimentalDecorators": "off",
    "no-script-url": "off",
    "new-cap": "off"
  },
  "parser": "babel-eslint"
}
